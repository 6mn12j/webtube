{
  "name": "webtube",
  "version": "1.0.0",
  "description": "Cloning Youtube with Vanilla and NodeJS",
  "main": "index.js",
  "author": "6mn12j",
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^10.0.1",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "body-parse": "^0.1.0",
    "connect-mongo": "^3.2.0",
    "cookie-parse": "^0.4.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.2",
    "css-loader": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "helmet": "^4.1.0",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node": "^14.11.0",
    "node-sass": "^4.14.1",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1",
    "postcss-loader": "^4.0.3",
    "pug": "^3.0.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore '.scss' --ignore 'static' ",
    "dev:assets": "cd src && cross-env WEBPACK_ENV=development webpack -w",
    "build:assets": "cd src && cross-env WEBPACK_ENV=production webpack",
    "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    "copyAll": "xcopy \"src/static\" \"build/static\" /I /E /Y && xcopy \"src/views\" \"build/views\" /I /E /Y ",
    "prebuild": "rd /s \"build\"",
    "start": "node build/init.js"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gh-pages": "^3.1.0",
    "mini-css-extract-plugin": "^0.11.3",
    "nodemon": "^2.0.4",
    "postcss": "^8.1.1",
    "prettier": "^2.1.2"
  }
}
